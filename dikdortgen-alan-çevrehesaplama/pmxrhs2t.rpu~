            InitializeComponent();
        }

        private void btnHesapla_Click(object sender, EventArgs e)
        {
            float kisakenar, uzunkenar, çevre, alan;
            kisakenar = Convert.ToSingle(txtKisa.Text);
            uzunkenar = Convert.ToSingle(txtUzun.Text);
            çevre = (kisakenar + uzunkenar)*2;
            alan = kisakenar * uzunkenar;





           
            
         
        }
    }
